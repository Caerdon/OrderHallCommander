<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="OrderHallCommander.lua"/>
	<Button name="OHCMissionButton" inherits="OrderHallMissionListButtonTemplate" virtual="true">
		<Size x="832" y="75"/>
	</Button>
	<Button name="OHCMiniMissionButton" inherits="GarrisonLandingPageReportMissionTemplate" virtual="true">
		<Size x="400" y="47"/>
	</Button>
	<Frame name="OHCStats" virtual="true">
		<Size x="110" y="75"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Expire" justifyV="TOP" justifyH="CENTER" inherits="GameFontHighlight">
					<Size x="95" y="30"/>
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="TOPRIGHT"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Chance" justifyV="BOTTOM" justifyH="CENTER" inherits="GameFontHighlight">
					<Size x="95" y="30"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>	
	</Frame>
	<Frame name="OHCMembers" virtual="true" enableMouse="false">
		<Size x="400" y="70"/>
		<Frames>
			<Frame parentArray="Champions" inherits="OHCFollowerIcon" />
		</Frames>
		<Scripts>
			<OnLoad method="MembersOnLoad"/>
		</Scripts>
	</Frame>
	<Frame name="OHCFollowerIcon" mixin="OrderHallCommanderMixin" enableMouse="true" inherits="GarrisonFollowerPortraitTemplate" virtual="true" >
		<Size x="52" y="60"/>
		<Scripts>
			<OnEnter method="Dump"/>
			<OnLeave method="HideTT"/>
		</Scripts>
	</Frame>
	<Frame name="OHCFollowerPortrait" enableMouse="true" inherits="GarrisonMissionPageFollowerTemplate" frameLevel="1" virtual="true" >
		<Size x="161" y="58"/>
	</Frame>
	<Button name="OHCFollowerButton" inherits="GarrisonFollowerButtonTemplate" virtual="true">
		<Size x="260" y="56"/>
	</Button>
	<Button name="OHCUpgradeButton" enableMouse="true" virtual="true" inherits="GarrisonMissionListButtonRewardTemplate">
		<Size x="32" y="32"/>
	</Button>	
	<!--
